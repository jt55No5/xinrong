(function(a){a.Address={init:function(b){a.Api.areaInfo({},function(c){if(c.state==1){var d='<option value="" data-id="">\u8bf7\u9009\u62e9\u7701\u4efd</option>';$.each(c.data,function(e,f){d+='<option value="'+f.name+'" data-id="'+f.id+'"'+(b&&b.province&&f.name==b.province?' selected="selected"':"")+">"+f.name+"</option>"});b&&b.city?$("#city").html('<option value="'+b.city+'">'+b.city+"</option>"):"";b&&b.district?$("#district").html('<option value="'+b.district+'">'+b.district+"</option>"):"";$("#province").html("").append(d).change(function(){var e=$("option:selected",this).data("id");a.Api.areaInfo({pid:e},function(g){if(g.state==1){var f='<option value="" data-id="">\u8bf7\u9009\u62e9\u57ce\u5e02</option>';$.each(g.data,function(h,i){f+='<option value="'+i.name+'" data-id="'+i.id+'">'+i.name+"</option>"});$("#district").html("").html('<option value="" data-id="">\u8bf7\u9009\u62e9\u5730\u533a</option>');$("#city").html("").append(f).change(function(){var h=$("option:selected",this).data("id");a.Api.areaInfo({pid:h},function(i){if(i.state==1){var j='<option value="" data-id="">\u8bf7\u9009\u62e9\u5730\u533a</option>';$.each(i.data,function(k,l){j+='<option value="'+l.name+'" data-id="'+l.id+'">'+l.name+"</option>"});$("#district").html("").append(j)}})})}})})}})}}})(AA);
